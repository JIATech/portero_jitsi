# Base de datos principal: SQLite
SQLITE_PATH=./data/local.db
SQL_DEBUG=false

# Configuración de PostgreSQL (desactivada)
# Estas variables se mantienen para compatibilidad
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portero_virtual
DB_USER=postgres
